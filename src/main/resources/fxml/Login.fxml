<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<!--
    Vue de connexion et d'inscription - Mondial 2030
    Interface moderne avec switch entre connexion et inscription
-->
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mondial2030.controller.LoginController"
            styleClass="login-container">
    
    <center>
        <VBox alignment="CENTER" spacing="20" maxWidth="500">
            
            <!-- Logo et titre -->
            <VBox alignment="CENTER" spacing="10" styleClass="login-header">
                <Label text="⚽" styleClass="login-logo"/>
                <Label text="MONDIAL 2030" styleClass="login-title"/>
                <Label text="Plateforme de Gestion des Tickets" styleClass="login-subtitle"/>
            </VBox>
            
            <!-- Panneau de connexion -->
            <VBox fx:id="connexionPane" alignment="CENTER" spacing="15" 
                  styleClass="login-card" visible="true" managed="true">
                
                <Label text="Connexion" styleClass="card-title"/>
                
                <VBox spacing="5">
                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="txtEmail" promptText="votre@email.com" 
                               styleClass="text-field-custom"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Mot de passe" styleClass="field-label"/>
                    <PasswordField fx:id="txtPassword" promptText="••••••••" 
                                   styleClass="text-field-custom"/>
                </VBox>
                
                <Label fx:id="lblError" text="" styleClass="error-label" 
                       visible="false" managed="false"/>
                
                <Button fx:id="btnConnexion" text="Se connecter" 
                        styleClass="btn-primary" onAction="#handleConnexion"
                        maxWidth="Infinity"/>
                
                <Separator/>
                
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Pas encore de compte ?"/>
                    <Hyperlink fx:id="linkInscription" text="Créer un compte" 
                               onAction="#showInscriptionPane"/>
                </HBox>
                
            </VBox>
            
            <!-- Panneau d'inscription -->
            <VBox fx:id="inscriptionPane" alignment="CENTER" spacing="15" 
                  styleClass="login-card" visible="false" managed="false">
                
                <Label text="Créer un compte" styleClass="card-title"/>
                
                <HBox spacing="15">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Nom *" styleClass="field-label"/>
                        <TextField fx:id="txtNom" promptText="Nom" 
                                   styleClass="text-field-custom"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Prénom *" styleClass="field-label"/>
                        <TextField fx:id="txtPrenom" promptText="Prénom" 
                                   styleClass="text-field-custom"/>
                    </VBox>
                </HBox>
                
                <VBox spacing="5">
                    <Label text="Email *" styleClass="field-label"/>
                    <TextField fx:id="txtEmailInscription" promptText="votre@email.com" 
                               styleClass="text-field-custom"/>
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Téléphone" styleClass="field-label"/>
                    <TextField fx:id="txtTelephone" promptText="+33 6 12 34 56 78" 
                               styleClass="text-field-custom"/>
                </VBox>
                
                <HBox spacing="15">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Mot de passe *" styleClass="field-label"/>
                        <PasswordField fx:id="txtPasswordInscription" promptText="••••••••" 
                                       styleClass="text-field-custom"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Confirmer *" styleClass="field-label"/>
                        <PasswordField fx:id="txtPasswordConfirm" promptText="••••••••" 
                                       styleClass="text-field-custom"/>
                    </VBox>
                </HBox>
                
                <Label fx:id="lblErrorInscription" text="" styleClass="error-label" 
                       visible="false" managed="false"/>
                
                <Button fx:id="btnInscrire" text="S'inscrire" 
                        styleClass="btn-primary" onAction="#handleInscription"
                        maxWidth="Infinity"/>
                
                <Separator/>
                
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Déjà un compte ?"/>
                    <Hyperlink fx:id="linkConnexion" text="Se connecter" 
                               onAction="#showConnexionPane"/>
                </HBox>
                
            </VBox>
            
            <!-- Footer -->
            <Label text="© 2024 Mondial 2030 - Tous droits réservés" 
                   styleClass="footer-text"/>
            
        </VBox>
    </center>
    
</BorderPane>
